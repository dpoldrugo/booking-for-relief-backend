{
  "kind": "collectionType",
  "collectionName": "aid_requests",
  "info": {
    "name": "Aid Request",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "location": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "contact_name": {
      "type": "string",
      "required": true
    },
    "contact_phone": {
      "type": "string",
      "required": true
    },
    "submitter_email": {
      "type": "email",
      "required": true,
      "private": true
    },
    "available_on_whatsapp": {
      "type": "boolean",
      "default": false
    },
    "locationLat": {
      "type": "float"
    },
    "locationLon": {
      "type": "float"
    },
    "fulfilled": {
      "type": "boolean",
      "default": false,
      "private": false
    },
    "volunteer_assigned": {
      "type": "string",
      "private": false
    },
    "notes": {
      "type": "richtext",
      "private": false
    },
    "comments": {
      "collection": "comment"
    },
    "tags": {
      "type": "string"
    },
    "original_app_id": {
      "type": "integer"
    },
    "volunteerMarkedAsDone": {
      "type": "boolean"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "novo",
        "provjereno",
        "rizicno_opasno",
        "preuzeto",
        "u_izvrsavanju",
        "parcijalno_rijeseno",
        "treba_ponoviti",
        "zavrseno"
      ],
      "default": "novo"
    }
  }
}
