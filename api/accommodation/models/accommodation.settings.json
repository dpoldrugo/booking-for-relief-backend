    "pets_allowed": {
      "type": "boolean"
    },
    "contact_name": {
      "type": "string",
      "required": true
    },
    "contact_phone": {
      "type": "string",
      "required": true
    },
    "submitter_email": {
      "type": "email",
      "required": true
    },
    "available_on_whatsapp": {
      "type": "boolean"
